{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "baseUrl": ".",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "bin",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "allowJs": true
  },
  "compileOnSave": false,
  "include": ["src/**/*"]
}
